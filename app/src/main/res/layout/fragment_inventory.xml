<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="3"
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:text="库存管理"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/buttonImageview1"
                android:padding="8dp"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:cropToPadding="true"
                android:adjustViewBounds="true"
                android:src="@drawable/shuju"
                android:layout_weight="0"
                android:layout_width="50dp"
                android:layout_height="45dp"></ImageButton>
        </LinearLayout>


        <SearchView
            android:id="@+id/starchBar2"
            android:layout_margin="8dp"
            android:background="@drawable/bg_searchview"
            android:iconifiedByDefault="false"
            android:queryHint="搜索产品名称..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:padding="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/quanbu2"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/is_background_contina"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="全部"
                android:layout_width="0dp"
                android:layout_height="27dp"/>

            <TextView
                android:id="@+id/dianzi"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/backgrount_contina"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="电子设备"
                android:layout_width="0dp"
                android:layout_height="27dp"/>

            <TextView
                android:id="@+id/jiaju"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/backgrount_contina"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="办公家具"
                android:layout_width="0dp"
                android:layout_height="27dp"/>

            <TextView
                android:id="@+id/bangong"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/backgrount_contina"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="办公用品"
                android:layout_width="0dp"
                android:layout_height="27dp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recy_inven"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
<com.google.android.material.floatingactionbutton.FloatingActionButton
android:id="@+id/floatingAction"
    app:srcCompat="@drawable/tianjia"
    app:tint="@android:color/white"
    app:backgroundTint="@color/erp_blue"
    android:layout_marginBottom="100dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"></com.google.android.material.floatingactionbutton.FloatingActionButton>
</androidx.constraintlayout.widget.ConstraintLayout>