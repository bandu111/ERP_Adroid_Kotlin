<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/touxiang"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:contentDescription="头像"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"
        android:src="@drawable/shangwu"
        android:layout_width="80dp"
        android:layout_height="80dp"></de.hdodenhof.circleimageview.CircleImageView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Names"
                android:layout_margin="1dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_weight="1"
                android:text="张伟"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:id="@+id/namestate"
                android:layout_margin="3dp"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/bg_searchview"
                android:text="在职"
                android:layout_width="60dp"
                android:layout_height="25dp"></TextView>
        </LinearLayout>
        <LinearLayout

            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textstatename1"
                android:layout_margin="1dp"
                android:text="销售部"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_margin="1dp"
                android:text="."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:id="@+id/textstatename2"
                android:layout_margin="1dp"
                android:text="销售经理"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/phones"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:text="13306219356"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:gravity="right"
                android:layout_gravity="right"
                android:text="入职："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:id="@+id/times"
                android:gravity="left"
                android:layout_gravity="left"
                android:text="2002-4-15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

</LinearLayout>