<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph"
        android:layout_above="@id/bottom_card"/>

    <!-- 底部“漂浮卡片”容器 -->
    <com.google.android.material.card.MaterialCardView
      app:layout_constraintBottom_toBottomOf="@+id/nav_host"
        android:id="@+id/bottom_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardUseCompatPadding="true"

        app:cardBackgroundColor="@android:color/transparent"
        android:layout_margin="13dp"
        tools:ignore="MissingConstraints">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            app:itemIconSize="20dp"
            app:itemPaddingBottom="5dp"
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bnv_bg_round"
            app:itemIconTint="@color/bnv_item_color"
            app:itemTextColor="@color/bnv_item_color"
            app:menu="@menu/items" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>